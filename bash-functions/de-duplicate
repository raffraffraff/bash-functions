# de-duplicate: deduplicates lines of text in a file without sorting, by default
#               showing the first instance of a match, unless --last arg is given

de-duplicate() {

  local FILE
  local LAST

  until [ -z "${1}" ]; do
    case $1 in
      --last)            LAST=true;;
      *)                 FILE=$1;;
    esac
    shift
  done

  if [ "${LAST}" == "true" ]; then
    tac ${FILE} | awk '!x[$0]++' | tac
  else
    awk '!x[$0]++' ${FILE}
  fi
}
