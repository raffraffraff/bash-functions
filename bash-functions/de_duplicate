# de_duplicate: removes lines of text in a file without sorting it. By default
# it will show the first instance of each line. You can override this default by
# passing the `--last` argument.
#
# Requirements:
#  - gawk/nawk

de-duplicate() {

  local FILE
  local LAST

  until [ -z "${1}" ]; do
    case $1 in
      --last)            LAST=true;;
      *)                 FILE=$1;;
    esac
    shift
  done

  if [ "${LAST}" = "true" ]; then
    tac ${FILE} | awk '!x[$0]++' | tac
  else
    awk '!x[$0]++' ${FILE}
  fi
}
