# Purpose:
# Calculates the age (in seconds) of a file
#
# Arguments:
# Expects a file name to be passed as an argument
#
# Requirements:
#  function: 'date_diff'

file_age() {
  local EPOCH
  source date_diff

  if [ -f "$1" ]; then
    EPOCH=$(stat -c '%Y' $1)
    date_diff now ${EPOCH}
  else
    echo "File $1 does not exist" >&2
    return 1
  fi
}
