# Purpose: 
# Tests if a value is a number, and exits with stderr 0 if it is.
#
# Arguments: 
# A value may be passed as an argument or via stdin

is_num () { 
    local TEST=$(awk -v VAL="$1" 'BEGIN {print VAL*1}');
    if [ "$1" = "$TEST" ]; then
        return 0
    else
        return 1
    fi
}
